                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
            <%# end %>
          </ul>
        </div>
      </div>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
