<div class="container d-flex justify-content-center m-3">
  <div class="col-6 text-white">
  <h1>Edit your offer</h1>
    <%= simple_form_for @offer do |f| %>
      <%= f.input :title%>
      <%= f.input :price%>
      <%= f.input :address,
          input_html: { style: "display: none", data: { geocoder_target: "address" } },
          wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.input :photo, as: :file %>
      <%= link_to "Back", offer_path, class:"btn btn-light" %>
      <%= f.submit class:"btn btn-light" %>
      <%= link_to "Delete", @offer, method: :delete, data: { confirm: "Would you like to delete this offer?"}, class:"btn btn-light" %>
    <% end %>
  </div>
</div>
