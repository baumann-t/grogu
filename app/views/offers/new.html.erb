<div class="container d-flex justify-content-center m-3">
  <div class="col-6">
    <%= simple_form_for @offer do |f| %>
      <%= f.input :title%>
      <%= f.input :price%>
      <%= f.input :location%>
      <%= f.input :description%>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
