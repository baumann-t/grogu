<div class="container d-flex justify-content-center m-3">
  <div class="col-6 text-white">
    <%= simple_form_for @offer do |f| %>
      <%= f.input :title%>
      <%= f.input :price%>
      <%= f.input :address%>
      <%#= f.input :location%>
      <%= f.input :description%>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
      <%= link_to "Back", offers_path, class:"btn btn-light py-1" %>
    <% end %>
  </div>
</div>
